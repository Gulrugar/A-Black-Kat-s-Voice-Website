---
import { siteData } from "../data/settings";
const url = Astro.url;
---

<!-- SEO -->
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:site_name" content={siteData.siteName} />
<meta property="og:url" content={url} />
<meta property="og:title" content={siteData.title} />
<meta property="og:type" content="website" />
<meta property="og:description" content={siteData.description} />

<meta
  property="og:image"
  content={import.meta.env.SITE + siteData.image.url}
/>
<meta
  property="og:image:url"
  content={import.meta.env.SITE + siteData.image.url}
/>
<meta
  property="og:image:secure_url"
  content={import.meta.env.SITE + siteData.image.url}
/>

  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />


<meta property="og:image:alt" content={siteData.image.alt} />

<!-- Twitter -->

<meta name="twitter:site" content={siteData.twitter.creator} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={siteData.title} />
<meta name="twitter:description" content={siteData.description} />
<meta
  name="twitter:image"
  content={import.meta.env.SITE + siteData.image.url}
/>
<meta name="twitter:image:alt" content={siteData.image.alt} />
<meta name="twitter:domain" content={import.meta.env.SITE} />

